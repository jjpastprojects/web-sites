.analytics
  .table
    tr
      cursor pointer
      th
        text-align center
        &:first-child
          text-align right
      td
        text-align center
        &:first-child
          text-align right
          width 30%
  #trend-chart
    width 100%
    height 300px
  #trend-loading
    position relative
  .loading_section
    display none
  .loading
    .loading_section
      display block
      position absolute
      left 45%
      top 40%
      text-align center
  #plot-tooltip
    position absolute
    display none
    border 1px solid #fdd
    padding 2px
    background-color #fee
    opacity 0.80
    #plot-tooltip-count
      font-size small
    #plot-tooltip-date
      font-size xx-small
