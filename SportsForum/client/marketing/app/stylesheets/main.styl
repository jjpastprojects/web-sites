      margin-left 7px
      font-size 14px

#footer .footer-copyright nav
  float right

#footer .footer-copyright nav ul
  list-style none
  margin 0
  padding 0

#footer .footer-copyright nav ul li
  border-left 1px solid white
  display inline-block
  line-height 12px
  margin 0
  padding 0 8px

#footer .footer-copyright nav ul li:first-child
