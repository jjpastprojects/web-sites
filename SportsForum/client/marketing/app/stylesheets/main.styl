  border-top 16px solid transparent
  content ""
  display block
  height 0
  left -10px
  position absolute
  top 0
  width 7px

#footer .footer-ribbon a
  color white
  font-size 1.6em

#footer .footer-copyright
  background-color bzBlue
  padding 30px 0 10px
  min-height 80px
  a
    text-decoration none

#footer .footer-copyright
