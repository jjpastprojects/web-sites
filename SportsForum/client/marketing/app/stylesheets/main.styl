/* #Footer */
#footer
  font-size 0.9em
  margin-top 50px

#footer h1, #footer h2, #footer h3, #footer h4, #footer a
  color white

#footer h4
  font-size 1.8em
  font-weight 200

#footer .footer-ribbon
  background orange
  position absolute
  margin -45px 0 0 14px
  padding 10px 20px 6px 20px

#footer .footer-ribbon:before
