/* Toggles */
.toggle
  margin 10px 0 0
  position relative
  clear both
  > label
    -webkit-transition all 0.15s ease-out
    -moz-transition all 0.15s ease-out
    transition all 0.15s ease-out
    background #F4F4F4
    border-left 3px solid bzBlue
    border-radius 5px
    color bzBlue
    display block
    font-size 1.1em
    min-height 20px
    padding 12px 20px 12px 10px
    position relative
    cursor pointer
    font-weight 400
    i.fa-minus
      display none
    i.fa-plus
      display inline
    i
      font-size 0.7em
      margin-right 8px
      position relative
      top -1px
  > p.preview-active
    height auto
    white-space normal

  > label:-moz-selection
    background none
  > label:selection
    background none
  > label:before
      border 6px solid transparent
      border-left-color inherit
      content ''
      margin-top -6px
      position absolute
      right 4px
      top 50%
  > label + p
    display block
    overflow hidden
    padding-left 30px
    text-overflow ellipsis
    white-space nowrap
    height 0px

  &.active
    i.fa-minus
      display inline
    i.fa-plus
      display none
    > label
      background bzBlue
      border-color bzBlue
      color white
    > label:before
      border 6px solid transparent
      border-top-color #FFF
      margin-top -3px
      right 10px
    > p
      white-space normal

/* Responsive */
@media (min-width: 765px) and (max-width: 991px)
  header
    .container
      width 100% !important
      nav.header_nav ul li a
        margin-right 12px

@media(max-width: 995px)
  header
    padding-top 50px
    .logo_img
      width 95px
      position relative
      top 10px

@media(max-width: 765px)
  header
    .header_nav.collapse
      display none !important
    .navbar
      .menu-signin
        i.fa-angle-down
          display none
      .container > .navbar-header
        margin-right auto
        margin-left auto
      .logo_img
        top 6px
      .menu-signin
        ul.dropdown-menu
          clear both
          left 0px
          position static
          background rgb(52, 73, 94) none repeat scroll 0% 0%
          color white
          box-shadow none
          border 0px none
          display block
          li
            box-shadow none
          span.sign-up-info
            a
              color white
      .btn-responsive-nav
        margin-top 8px
        display inline
        float right
      .header_nav
        border-top 1px solid transparent
        box-shadow 0px 1px 0px rgba(255, 255, 255, 0.1) inset
        padding-left 0px
        padding-right 0px
        clear both
        float left
        width 100%
        margin-left 2px
        .demo_dropdown
          padding 5px 0
        .user_dropdown
          border-top 1px solid transparent
          box-shadow 0px 1px 0px rgba(255, 255, 255, 0.1) inset
          width 100%
          padding 5px 0px
          .btn
            font-weight 700
            border none
            padding-left 0px
          ul.dropdown-menu
            position relative
            box-shadow none
            background-color transparent
            border none
            clear both
            float left
            a
              color white
            a:hover
              background-color transparent
        .user_dropdown.open
          .btn
            border none
        >ul
          width 100%
          padding-left 0px
          margin-bottom 0px
          li
            display block
            border-top 1px solid transparent
            box-shadow 0px 1px 0px rgba(255, 255, 255, 0.1) inset
            padding 5px 0
            clear both
            a
              display block
              text-decoration none
            .get_bz
              text-align left
              padding-left 0px
              background-color transparent
