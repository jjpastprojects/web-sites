    button
      background none
      border none
      border-left 1px solid white
      color white
      font-weight 300
      border-radius 0
      padding 0 0 0 20px
      &:active
        background none
        border none
        border-left 1px solid white
        box-shadow none
    &.open
      .dropdown-toggle
      .btn-default
        box-shadow none
        background none
        border none
        border-left 1px solid white
        color white
    li a
      font-weight 400
      text-transform none
    .dropdown-menu
