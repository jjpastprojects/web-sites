    ul.image-list .image-item
      margin 0 auto 35px
      max-width 300px
  @media(min-width: 650px)
    .links_demo
      margin-top 50px
      .bz_com_demo
        margin-right 30%
      .bz_forum
        position relative
        left -80px
        
  @media(max-width: 420px)
    .banner_section
      .text-separator
        display none
      h1
        font-size 25px
      .links a
        font-size 16px
        display block
      .tagline
        font-size 18px
      .links_demo
