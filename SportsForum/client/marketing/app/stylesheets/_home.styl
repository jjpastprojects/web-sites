@import "variables"

html
  background bzBlue

#home
  h2
    text-align center
  img
    border 3px solid lightGray
  .bz_com_demo_btn
    margin-right 100px
  .soon_note
    font-size small
    display block
    text-align center    
  .small_offer_note
    font-size small
    display block

  .banner_section
    background url('{{{resourcePath}}}/img/m/top_bg.jpg') no-repeat center center
    -webkit-background-size cover
    -moz-background-size cover
    -o-background-size cover
    background-size cover
    color white
    text-align center
    min-height 483px
    margin-bottom 0px
    h1
      margin 45px 0 30px 0
    .content_cta
      padding 8px 12px
      background orange
      color white
      transition all 0.2s linear 0s
      font-weight bold
      border-radius 3px
      &:hover
        color white
        background transparent
        border 1px dashed orange
    .tagline
      font-size 24px
      font-weight bold
    .links
      font-weight bold
      a
        transition all 0.2s linear 0s
        color lightGray
        &:hover
          text-decoration none
          color white
          
  /* Feature Box */
  .feature-box
    clear both
    h4
      font-size 1.4em
      letter-spacing normal
      line-height 27px
      margin 0px 0px 14px
      font-weight 400
      margin-bottom 0px

  .feature-box .feature-box-icon
    background #CCC
    border-radius 35px
    color bzBlue
    display inline-block
    float left
    height 35px
    line-height 35px
    margin-right 10px
    position relative
    text-align center
    top 5px
    width 35px

  .feature-box .feature-box-info
    padding-left 50px

  /* Secundary */
