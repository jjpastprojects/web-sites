    color #0e0e0e

  .feature-box.secundary .feature-box-icon
    background transparent
    width 44px
    height 50px

  .feature-box.secundary .feature-box-icon i.fa
    font-size 28px

  .feature-box.secundary .feature-box-info
    padding-left 54px

  /* Icon Featured */
