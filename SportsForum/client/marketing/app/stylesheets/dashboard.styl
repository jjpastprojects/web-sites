@import "variables"

.framed_page
  .hide-in-frame
    display none


.dashboard_container
  padding 0 15px 0 0
  .site_box
    border-bottom 1px solid lightestGray
    padding 0 10px 30px
    .btn-group
      margin-top 4px
      margin-right 15px
      .caret
        border-width 6px
    .site_box_info
      h3
        margin-top 0
        margin-bottom 0
  .btn
    i
      margin-right 5px
  footer
    background none
    color inherit
    
  aside
    padding-right 0
    padding-top 15px
    ul.nav-tabs
      border-bottom-color lightestGray
      a
      a:hover
        color inherit
        border none
        border-radius 0
        margin-right 0
        padding 12px 10px
      i
        margin-right 10px
        min-width 20px
      li
        border-bottom 1px solid gray
    nav
      li.active
        a
        a:hover
          background-color activeMenu
    .mod_alerts
      background-color red
      color white
      padding 1px 2px
      font-size 9px
      font-weight bold
    .coming_soon
      font-style italic
      color lightGray
      span
        font-size 9px
      a:hover
        background none 

  .content_area
    padding-top 5px
    background-color white
    position static
    label
      font-weight normal
    input[type="checkbox"]
      vertical-align middle
    .mod_subscription
      background bootstrapLightGray
      border-radius 5px
      font-size smaller
      padding 1px 5px
    .nav.nav-tabs
      margin-bottom 15px
      padding-top 25px
    h3
      margin-top 20px
    #avatar_list
      .btn
        i
          margin-right 0
    .add-avatar
      margin-top 10px
    .btn-save
      margin 25px 0
    .form-horizontal .control-label
      padding-top 4px

  .help_section
    font-size 10px
    border-top 1px solid bootstrapLightGray
    padding-top 5px
    margin 20px 0 0

  .install-types
    margin-bottom 30px
    img
      width 100px
      height auto

.installation_instructions
  li
    margin-bottom 30px
    border-bottom 1px solid bootstrapLightGray
    padding-bottom 30px
    &:last-child
      border-bottom 0
      padding-bottom 0
    img
      max-width 350px
      height auto
    em
      background-color bootstrapLightGray
      font-weight bold
      padding 2px 3px
  h3
    margin-bottom 25px
  textarea
    margin 10px 0 0
    min-height 235px
  .advanced_note
    display none
    li
      border-bottom 0
      margin-bottom 0
      padding-bottom 0
  .toggle_advanced_note
    cursor pointer
  .form-control[readonly]
    cursor auto

.badge_preview
  padding-top 5px
  .badge_marker
    font-size xx-small
    cursor help
    padding 0 2px
    margin 0 1px
    line-height 12px
    font-weight lighter
    font-size 9px
    background-color #999
    .badge-title
      color white
      text-transform uppercase
      font-weight bold
input.form-control.spinedit.discovery-limit
  width 100%
