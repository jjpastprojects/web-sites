//Styling challenges and new challenge views

.challenge_container
  padding 0 0 5px 5px
  margin 0 0 15px 5px
  overflow hidden
  .options_bar
    .reply_in_challenge
      display none
  .challenged
  .challenger
    width 43.83509%
  .challenged
      margin-left 0px
  .challenger
    margin-left 10px
  .versus
    text-align center
    width 7.787%
    // margin-left 10px
    .border
      width 1px
      margin-left 50%
      margin-bottom -70px
      height 110px
    .vs-text
      color white
      padding 5px
      border-radius 50%
      font-size 17px
      line-height 19px
      font-weight bold
      margin 10px auto auto auto
      width 20px
      height 20px
  .best_marker
    color orange
    display none
    border-left none
    margin 0 3px 0 0
    padding 0
  .main_challenge_view
    .options_bar
      .mobile_options_menu
        .dropdown-menu
          position fixed
          right 7px
          top auto
          left auto
          margin-top 7px
    .mobile_options_menu
      .fund
        display none
  .ends_time_container
    margin 2px 0
    font-size 10px
  .active-replies-container
    margin 2px 0
    font-size 10px
    .active-replies
      margin-left -20px //so that it stays centered, compared to the above line. It is pushed by the left description bar
  .mobile_options_menu
    margin 5px 0 3px 10px

.challenge_view
  > .main_challenge_view
    .challenged
    .challenger
      > strong
        margin-left 60px
        margin-top 2%
        display block
  .newComment_view
    margin-top 10px

.newChallenge_view
  position relative
  margin-left 5px
  .control-group
    margin-bottom 0
  .opposing_comment
    height 50px
    &.xtextarea
      border none
      padding-left 30px
  .submit_icon
    display none
  .challenge_cost_help
    display inline-block
    cursor pointer
  .submit_controls
    padding 4px
    border 0px
  .newChallenge_text_challenge
    margin-top 16px
    padding 3px 8px
    font-size 14px
    display inline
  .newChallenge_textarea_container:before
    content ""
    position absolute
    right 100%
    top 16px
    border-top 22px solid darkGray
    border-right 5px solid darkGray
  .newChallenge_textarea_container
    padding 0px 1%

.newChallenge_view.LOADING
  .opposing_comment
    background-color loading_textarea_bg
  .submit
    cursor default
  .submit_icon
    display inline
    font-size larger
    margin-left 5px

.majorCommentInChallenge_view
  > div > .text
    margin-top 5px
    margin-left 0
    min-height 20px
  a
    text-decoration none
  .author_name
    line-height 30px

.challenge_view.DELETED
  .challenge_container
    padding 5px
    background none //removing its background color as we don't want deleted challenges to stand out anymore

.challenge_options
  height 25px

.votes_no
  font-size 11px
