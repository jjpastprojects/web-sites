.bet_view
  > .single-item-wrapper
    margin 0px 0px 15px 5px
    .text
      min-height 20px
      p
        margin 0px
    .joining-ctrl
      display inline-block
    .signature
    .accepting-ctrl
    .forf-ctrl
    .resolve-ctrl
      display none
    .bet-close
    .bet-start-forf
      display none
    .options_bar
      clear both
      padding-top 5px
      .bet-close.hidden-phone
      .bet-start-forf.hidden-phone
        padding 1px 3px
        border separator
        position relative
        top -1px
    .mobile_options_menu > .dropdown-menu
      position fixed
      right 7px
      top auto
      left auto
      margin-top 7px
    .resolve-ctrl
    .forf-ctrl
      margin-top 5px
    .icon-ok
      color green
    .main_comment_view
      margin 0px
      .like_section_mobile
      .like_section
        border-right 3px solid lightGray
        padding-right 4px
      .left_box
        width 30px
        height 30px
        padding-left 4px
        .author_image_container
          width 30px

.bets_view
  .in-reply-to
    display none
  .filtering_options
    margin 10px 0 10px 5px
    a
      background transparent
    .active
      box-shadow 0px 0px 0px 3px inset
    .btn-bet-filter
      background none
    ul .btn-filter
      margin-right 0px

.comments_view
  .bet_view
    &.BET_STATUS_RESOLVING_PTS.DELETED > .single-item-wrapper
    &.BET_STATUS_RESOLVED_PTS.DELETED > .single-item-wrapper
    &.BET_STATUS_RESOLVED.DELETED > .single-item-wrapper
      background none

.context_view .newComment_view.BET_TYPE_OPEN
  .users
    display none

.USER_IS_MODERATOR .bet_view.BET_STATUS_FORF_CLOSED.BET_WIN_SIDE_UNDECIDED
  > .single-item-wrapper
    .resolve-ctrl
      display inline-block

.bet_view.USER_TARGETED_IN_BET
  > .single-item-wrapper
    .accepting-ctrl .bet-decline
      display inline-block

.bet_view.BET_STATUS_OPEN
  &.AUTHOR
    > .single-item-wrapper
      .bet-close
        display inline-block

.bet_view.BET_STATUS_CLOSED
  &.AUTHOR
    > .single-item-wrapper
      .bet-start-forf
        display inline-block

.USER_LOGGED_IN
  .bet_view.USER_TARGETED_IN_BET.BET_STATUS_OPEN
  .bet_view.BET_STATUS_OPEN.BET_TYPE_TARGETED_OPEN
  .bet_view.BET_STATUS_OPEN.BET_TYPE_OPEN
    > .single-item-wrapper
      .joining-ctrl
        display none
      .accepting-ctrl
        display inline-block

.bet_view.BET_STATUS_OPEN.BET_TYPE_TARGETED_OPEN
.bet_view.BET_STATUS_OPEN.BET_TYPE_OPEN
  &.AUTHOR
    > .single-item-wrapper
      .accepting-ctrl
      .joining-ctrl
        display none

.bet_view.USER_TARGETED_IN_BET.BET_STATUS_OPEN
.bet_view.BET_STATUS_OPEN.BET_TYPE_TARGETED_OPEN
.bet_view.BET_STATUS_OPEN.BET_TYPE_OPEN
  &.USER_ACCEPTED_BET
  &.USER_DECLINED_BET
    > .single-item-wrapper
      .accepting-ctrl
        display none

.bet_view.USER_JOINED_BET.BET_STATUS_OPEN
  > .single-item-wrapper
    .joining-ctrl
    .accepting-ctrl
      display none

.bet_view.BET_STATUS_OPEN.BET_TYPE_OPEN
  > .single-item-wrapper
    .bet-decline
      display none

.bet_view.BET_STATUS_FORF
  &.USER_ACCEPTED_BET
  &.USER_JOINED_BET
    > .single-item-wrapper
      .forf-ctrl
        display inline-block

.bet_view.BET_STATUS_FORF.USER_FORFEITED_BET, .bet_view.BET_STATUS_FORF.USER_CLAIMED_BET
  &.USER_ACCEPTED_BET
  &.USER_JOINED_BET
    > .single-item-wrapper
      .forf-ctrl
        display none

.newcomment_textarea_container
  .bet-type
  .bet-type-info
  .bet_description
  .bet-ending-date
  .bet-starting-forf-date
  .bet_users
  .bet-points
  .bet-points-info
  .users
  .bet-points-user
    display none
  .bet-explain
    margin-bottom 5px

