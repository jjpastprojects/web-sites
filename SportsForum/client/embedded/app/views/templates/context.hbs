  </div>
</div>

<div class='articleModerator_view'></div>
{{#ifnot appIsArticle}}
  <h3 class="row-fluid text forum_title"></h3>
{{/ifnot}}

<div class="row-fluid">
  <div class="span12">
    <div class="content content_context tab-content">
      <div class="tab-pane fade in" id="comments">
        <button class='create-comment inherit-border-color'>{{translate 'create_comment_thread'}}</button>
        <div class="newComment_view"></div>
        <div class="comments_view"></div>
      </div>
      <div class="tab-pane fade in" id="active_question"></div>
      <div class="tab-pane fade in" id="user_notifications"></div>
      <div class="tab-pane fade in" id="competitions">
        <a href="#brzn/comments">
          <p>
            <i class="icon-double-angle-left"></i>
            {{translate "go_to_comments"}}
          </p>
        </a>
      </div>
      <div class="tab-pane fade in" id="competition_details">
        <a href="#brzn/competitions">
          <p>
            <i class="icon-double-angle-left"></i>
            {{translate "go_to_competitions"}}
          </p>
        </a>
      </div>
    </div>
  </div>
</div>
