  <div>
    {{#if loggedIn}}
      {{translate "forum_private_for_you"}}
    {{else}}
      {{translate "forum_private_for_guest"}}
    {{/if}}
  </div>
{{else}}

<div class="row-fluid notifications_view"></div>
</div>

<div class="row-fluid">
  <div class="span12 header">
    {{#if appIsArticle}}
      {{#if loggedIn}}
        <div class="pull-right">
          <div class="currentUser_view"></div>
        </div>
      {{else}}
        <div class="pull-right">
          <div class="headerLogin_view"></div>
        </div>
      {{/if}}
    {{/if}}

    <div class="pull-left">
      <div class="languageSelect_view"></div>
    </div>

