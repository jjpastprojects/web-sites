{{#if deleted}}
  <div class="comment_wrapper single-item-wrapper">
    <div class="left_box pull-left">
      <div class="author_image_container"></div>
    </div>
    {{> top_note_bar}}
    <div class="deleted_info">
      <em>{{translate "comment_deleted"}}</em>
    </div>
    <div class="options_bar">
      <span class="comment_action_group left"></span>
    </div>
  </div>
  <div class="comments_view"></div>
{{else}}
  <div class="comment_wrapper single-item-wrapper">
    {{> mod_menu }}
    <div class="tc description_bar">
      {{> funded_note}}
      {{> promoted_title}}
    </div>
    <div class="main_comment_view">
      {{> left_box}}
      {{> top_note_bar}}
      <div class="text"></div>
      <div class="signature"></div>
      {{> options_bar}}
      {{> promote_popup}}
    </div>
  </div>
  {{> edit_comment}}
  <div class="newComment_view"></div>
  <div class="newChallenge_view"></div>
  <div class="comments_view"></div>
{{/if}}
