{{#partial "title"}} Reset password {{/partial}}
{{#partial "content"}}
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="panel panel-default reset_psw">
        <div class="panel-heading">
          <h4 class="tc">Reset your password</h4>
        </div>
        <div class="panel-body">
          <div class="form">
            {{#if error}}
              <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            <form method="post" action="/auth/reset/{{token}}">
              <div class="form-group">
                <label for="inputNewPassword" class="control-label">New password:</label>
                <input id="inputNewPassword" name="passwd" class="changePassword form-control" type="password" />
              </div>
              <div class="form-group">
                <label for="signup_passwd_confirm" class="control-label">Confirm password:</label>
                <input type="password" id="passwd_confirm" class="input-xlarge form-control" name="passwd_confirm" />
              </div>
              <div>
                You will receive an email with further instructions.
              </div>
              <input type="submit" class="btn btn-success" value="Reset"/>
            </form>
          </div>
          <p class="sidenote already">Don't have an account? <a href="/signup{{query "popup" "redirect"}}"> Sign up</a></p>
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

{{/partial}}
{{> marketing/layout}}
