{{#partial "title"}} Reset password {{/partial}}
{{#partial "content"}}
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="panel panel-default reset_psw">
        <div class="panel-heading">
          <h4 class="tc">Reset your password</h4>
        </div>
        <div class="panel-body">
          <div class="form">
            {{#if error}}
              <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            <form method="post" action="/auth/reset">
              <div class="form-group">
                <label for="email" class="control-label">E-mail:</label>
                <input type="text" class="form-control" placeholder="E-mail" name="email" {{post "email" "text"}} />
              </div>
              <div>
                You will receive an email with further instructions.
              </div>
              <input type="submit" class="btn btn-success" value="Reset"/>
            </form>
          </div>
          <p class="sidenote already">Don't have an account? <a href="/signup{{query "popup" "redirect"}}"> Sign up</a></p>
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

{{/partial}}
{{> marketing/layout}}
