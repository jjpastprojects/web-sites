<%= language_prompt %>

<%= simple_form_for [:admin, @order_status], url: @order_status.new_record? ? admin_order_statuses_path : admin_order_status_path(@order_status), :html => {:class => 'form-horizontal'} do |f| %>
    <%= form_errors f %>

    <%= simple_fields_for 'order_status', @order_status do |f| %>

        <% Globalize.with_locale(@locale.slug) do %>
            <%= f.input :name %>
        <% end %>

        <%= f.input :type, collection: OrderStatus.types.invert %>

        <%= language_input f %>
    <% end %>

    <div class="form-actions">
      <%= f.button :submit, save_or_update(@order_status), :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  admin_order_statuses_path, :class => 'btn' %>
    </div>
<% end %>