<div class="page-header">
  <div class="pull-right">
    <%= link_to (plus_icon + ' Статус'),
                new_admin_order_status_path,
                :class => 'btn' %>
  </div>

  <h1>Статусы заказа</h1>
</div>

<% if @order_statuses.empty? %>
    <div class="well">
      Опаньки, ни одного статуса не найдено :(
    </div>
<% else %>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Статус</th>
        <th width="60px"></th>
      </tr>
      </thead>
      <tbody>

      <% @order_statuses.each do |order_status| %>
          <tr>
            <td>
              <%= order_status.name %>
            </td>

            <td>
              <%= link_to pencil_icon,
                          edit_admin_order_status_path(order_status), :class => 'btn btn-mini' %>

              <%= link_to trash_icon(true),
                          admin_order_status_path(order_status),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>  