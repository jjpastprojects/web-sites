<%= simple_form_for [:admin, @three60], :html => { :class => 'form-horizontal' } do |f| %>
  <%= form_errors f %>

  <%= f.input :name %>
  <%= f.input :is_reverted %>

  <% if @three60.id %>
    <%= image_field @three60, 'src', f, [300, 300], sizes: ['120x80', '800x800'] %>
  <% end %>

  <% unless @three60.id %>

    <%= f.input :zip, as: :file %>
    <div class="control-group">
      <div class="controls">
        <div class="row">
          <div class="span6">
            <div class="alert alert-warning">
              <strong>Внимание!</strong>
              <div>
                Вам необходимо загрузить zip-архив с файлами для 3D-просмотра. Самый первый файл из этого архива — иконка 3D-просмотра.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= f.input :good_id, as: :hidden %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, save_or_update(@three60), :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        edit_admin_good_path(@good, anchor: "pdfs"), :class => 'btn' %>
  </div>
<% end %>
