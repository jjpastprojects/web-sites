<div class="page-header">
  <div class="pull-right">
    <%= link_to (plus_icon + ' Тип'),
                new_admin_payment_type_path,
                :class => 'btn' %>
  </div>

  <h1>Типы оплаты</h1>
</div>

<% if @payment_types.empty? %>
    <div class="well">
      Опаньки, ни одного типа оплаты не найдено :(
    </div>
<% else %>
    <table class="table table-striped" data-type="nested" data-nested-url="<%= order_admin_payment_types_path %>">
      <thead>
      <tr>
        <th>Тип оплаты</th>
        <th width="60px"></th>
      </tr>
      </thead>
      <tbody>

      <% @payment_types.each do |payment_type| %>
          <tr data-nested="item" data-nested-id="<%= payment_type.id %>">
            <td>
              <%= payment_type.name %>
            </td>

            <td>
              <%= link_to pencil_icon,
                          edit_admin_payment_type_path(payment_type), :class => 'btn btn-mini' %>

              <%= link_to trash_icon(true),
                          admin_payment_type_path(payment_type),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>  