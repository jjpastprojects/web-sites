<%= language_prompt %>

<%= simple_form_for [:admin, @property_type], :html => { :class => 'form-horizontal' } do |f| %>
  <%= form_errors f %>

  <% Globalize.with_locale(@locale.slug) do %>
    <%= f.input :name %>
  <% end %>

  <%= language_input f %>
  
  <div class="form-actions">
    <%= f.button :submit, save_or_update(@property_type), :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        admin_property_types_path, :class => 'btn' %>
  </div>
<% end %>
