<%= language_prompt %>

<%= simple_form_for [:admin, @tag], :html => { :class => 'form-horizontal' } do |f| %>
  <%= form_errors f %>

  <%= f.input :name %>

  <% Globalize.with_locale(@locale.slug) do %>
    <%= f.input :title %>
  <% end %>

  <%= language_input f %>

  <div class="form-actions">

    <%= f.button :submit, save_or_update(@tag), :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_tags_path, :class => 'btn' %>
  </div>
<% end %>
