<%- model_class = File -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @pdf.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parent_id) %>:</strong></dt>
  <dd><%= @pdf.parent_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:good_id) %>:</strong></dt>
  <dd><%= @pdf.good_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:src_file_name) %>:</strong></dt>
  <dd><%= @pdf.src_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:src_content_type) %>:</strong></dt>
  <dd><%= @pdf.src_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:src_file_size) %>:</strong></dt>
  <dd><%= @pdf.src_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:src_updated_at) %>:</strong></dt>
  <dd><%= @pdf.src_updated_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pdfs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pdf_path(@pdf), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pdf_path(@pdf),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
