<%= language_prompt %>
  
<%= simple_form_for [:admin, @setting], :html => { :class => 'form-horizontal' } do |f| %>
  <%= form_errors f %>
  
  <%= f.input :key %>

  <% Globalize.with_locale(@locale.slug) do %>
    <%= f.input :value %>
  <% end %>

  <%= language_input f %>

  <div class="form-actions">
    <%= f.button :submit, save_or_update(@setting),  :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        admin_settings_path, :class => 'btn' %>
  </div>
<% end %>
