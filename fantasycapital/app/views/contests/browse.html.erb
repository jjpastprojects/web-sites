<% content_for :banner do %>
  <div class="capitalbanner">
    <div class="banner"></div>
    <div class="banner-elements">
      <div class="row banner-circles hide visible-md visible-lg">
        <div class="col-md-2 circle-small">
          <img src="<%= image_path("marquee-1.png") %>">
        </div>
        <div class="col-md-3">
          <div class="line"></div>
        </div>
        <div class="col-md-2 circle-small">
          <img src="<%= image_path("marquee-2.png") %>">
        </div>
        <div class="col-md-3">
          <div class="line"></div>
        </div>
        <div class="col-md-2">
          <img src="<%= image_path("marquee-3.png") %>">
        </div>
      </div>
      <div class="row banner-text">
        <div class="col-md-4">
          <span class="hidden-md hidden-lg">1. Enter a contest</span>
          <span class="hidden-xs hidden-sm">Enter a contest</span></div>
        <div class="col-md-4">
          <span class="hidden-md hidden-lg">2. Draft a team</span>
          <span class="hidden-xs hidden-sm">Draft a team</span>
        </div>
        <div class="col-md-4 green big">
          <span class="hidden-md hidden-lg">3. Win cash</span>
          <span class="hidden-xs hidden-sm">Win cash</span>
        </div>
      </diV>
      <div class="row banner-button hide">
        <div class="col-md-12">
          <a href="#" class="sign-up-free">Sign-up for free</a>
        </div>
      </div>
    </div>
    <div class="never-played-guide clearfix">
      <div class="pull-left fc-logo"></div>
      <div class="pull-left">
        <h2>Never played daily fantasy sports?</h2>
        <p>Check out latest blog post for the Fantasy Capital quick start guide &rarr;</p>
      </div>
      <div class="pull-right close-button">
        <img src="<%= image_path("home-close-button-green.png") %>">
      </div>
    </div>
  </div>
<% end %>
