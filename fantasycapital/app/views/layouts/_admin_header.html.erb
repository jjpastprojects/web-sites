<%= render 'shared/topbar' %>
<%# we should find a way to combine this better with shared/_header.html.erb %>
<header>
  <div class='container'>
    <h1 class='logo'>
      <%= link_to root_path do%>
          <%= image_tag 'main_logo.png', alt: 'Fantasy Capital' %>
      <% end %>
    </h1>

    <% if current_user %>
        <div class='balanceBlock'>
          <strong>Your Balance</strong>
          <strong class='ajax-modal pull-right' id='add-fund' data-url="<%= add_fund_accounts_path %>">
            Add Funds
            <i class="glyphicon glyphicon-plus"></i>
          </strong>
          <h1>
            <sup>$</sup>
            <%= number_to_currency(current_user.account_balance, unit: '') %>
          </h1>
        </div>
    <% end %>

    <div style="clear:both;"></div>
    <div class='navbar navbar-default capitalnavbar' role="navigation">
      <div class='navbar-header'>
        <button class='navbar-toggle' data-target=".mainMenu" data-toggle="collapse" type="button">
          <span class='sr-only'>Toggle navigation</span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
        </button>
      </div>
      <div class='navbar-collapse collapse mainMenu'>
        <ul class='nav navbar-nav'>
          <li class='<%= menu_classes 'home' %>'>
            <%= link_to 'Home', root_path %>
            <div class="line"></div>
          </li>
          <li class='<%= menu_classes 'admin' %>'>
            <%= link_to 'Admin', admin_path %>
            <div class="line"></div>
          </li>
          <li class='<%= menu_classes 'games' %>'>
            <%= link_to 'Games', admin_games_path %>
            <div class="line"></div>
          </li>
          <li class='<%= menu_classes 'entries' %>'>
            <%= link_to 'Entries', admin_entries_path %>
            <div class="line"></div>
          </li>
          <li class='<%= menu_classes 'contests' %>'>
            <%= link_to 'Contests', admin_contests_path %>
            <div class="line"></div>
          </li>
          <li class='<%= menu_classes 'users' %>'>
            <%= link_to 'Users', admin_users_path %>
            <div class="line"></div>
          </li>

          <li class="welcome-box">
            <% if user_signed_in? %>
                <div class="welcome-text">
                  <a href="javascript:void(0)">
                    Welcome, <span class="first-name"><%= current_user.username%></span>
                  </a>
                </div>

                <ul class="usermenu">
                  <li>
                    <a href="/users/sign_out" data-method="delete" class="sign-out">
                      Log Out
                    </a>
                  </li>
                </ul>
            <% else %>
                <!--<%= link_to "SIGN UP" , new_user_registration_path, :class => 'link' %>
              <a href="#" class="link">/</a>
              <%= link_to "SIGN IN" , new_user_session_path, :class => 'link' %>
              <span class="arrow">&#10095;</span>-->
                <%= link_to "JOIN NOW" , '/', :class => 'link require-signin' %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
